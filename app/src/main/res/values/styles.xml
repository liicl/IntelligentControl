<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingTitle">
        <!-- Customize your theme here. -->
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SettingInsiderTitle">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="SettingLayout">
        <!-- Customize your theme here. -->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HomeButton">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowDx">15</item>
        <item name="android:shadowDy">15</item>
        <item name="android:shadowColor">#AA323232</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:textColor">#AA323232</item>
    </style>
</resources>
